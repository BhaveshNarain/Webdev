<% include ../views/partials/header %>

<div class="container">
    <div class="col-md-12 col-sm-12">
        <h1 style="text-align: center"> Create new campground </h1>
        <div style="width: 30%; margin: 30px auto">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
    </div>
</div>

